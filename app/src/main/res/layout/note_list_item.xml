<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <TextView
        android:id="@+id/title_drop"
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="80dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="50sp"
        android:background="@color/title_drop_bg"
        android:text="H"/>

    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/title_drop"
        android:paddingLeft="8dp"
        android:text="How to make bread and  plus "
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/note_body"
        android:paddingLeft="8dp"
        android:layout_toRightOf="@id/title_drop"
        android:layout_below="@id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The london.htm and paris.htm are normal HTML files, which you can add AngularJS expressions as "/>

</RelativeLayout>